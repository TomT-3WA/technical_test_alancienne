{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <h1>Inscription</h1>

        {{ form_start(form) }}
            {{ form_row(form.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
            {{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_row(form.confirmPassword, {'label': 'Confirmer le mot de passe' ,'attr': {'placeholder': 'Mot de passe'}}) }}
            <button type="submit" class="btn btn-success">S'inscrire</button>
        {{ form_end(form) }}
{% endblock %}
